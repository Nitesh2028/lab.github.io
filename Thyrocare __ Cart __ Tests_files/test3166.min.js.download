(function () {
    var filterType = new URL(document.location).searchParams.get("filterType");
    if (filterType == undefined) {
        $("#packageType").val("all")
    } else {
        $("#packageType").val(filterType.toLowerCase())
    }
    filterByType()
})();
$("#packageType").change(function () {
    filterByType()
});

function scrollToTop() {
    document.body.scrollTop = 500;
    document.documentElement.scrollTop = 500
}

function scrollFunction() {
    if (document.getElementById("goToTop")) {
        if (document.body.scrollTop > 800 || document.documentElement.scrollTop > 800) {
            document.getElementById("goToTop").style.display = "block"
        } else {
            document.getElementById("goToTop").style.display = "none"
        }
    }
}

function filterByType() {
    var type = $("#packageType").val();
    if (type.toLowerCase() == "test") {
        if (window.location.href.indexOf("?searchQuery") > -1) {
            //$("#thyrocareTest").children().show();
            $("#thyrocareTest div.related-test-inner").filter(function () {
                return $(this).css('display') == 'none';
            }).css('display', 'block')
        }
        $("#thyrocareProfiles").addClass("hide");
        $("#thyrocareOffers").addClass("hide");
        $("#thyrocareTest").removeClass("hide");
        $("#package-test").addClass("active");
        $("#package-profile").removeClass("active");
        $("#package-offer").removeClass("active");
       
    } else if (type.toLowerCase() == "offer") {
        if (window.location.href.indexOf("?searchQuery") > -1) {
            //$("#thyrocareTest").children().show();
            $("#thyrocareOffers div.related-test-inner").filter(function () {
                return $(this).css('display') == 'none';
            }).css('display', 'block')
        }
        $("#thyrocareTest").addClass("hide");
        $("#thyrocareOffers").removeClass("hide");
        $("#thyrocareProfiles").addClass("hide");
        $("#package-offer").addClass("active");
        $("#package-profile").removeClass("active");
        $("#package-test").removeClass("active")
    } else if (type.toLowerCase() == "profile") {
        if (window.location.href.indexOf("?searchQuery") > -1) {
            //$("#thyrocareTest").children().show();
            $("#thyrocareProfiles div.related-test-inner").filter(function () {
                return $(this).css('display') == 'none';
            }).css('display', 'block')
        }
        $("#thyrocareTest").addClass("hide");
        $("#thyrocareProfiles").removeClass("hide");
        $("#thyrocareOffers").addClass("hide");
        $("#package-profile").addClass("active");
        $("#package-test").removeClass("active");
        $("#package-offer").removeClass("active")
    } else if (type.toLowerCase() == "aarogyam") {
        var n = "aarogyam";
        searchData(n);
    } else {
        $("#thyrocareTest").removeClass("hide");
        $("#thyrocareProfiles").removeClass("hide");
        $("#thyrocareOffers").removeClass("hide");
        $("#package-test").removeClass("active");
        $("#package-offer").removeClass("active");
        $("#package-profile").removeClass("active")
    }
}